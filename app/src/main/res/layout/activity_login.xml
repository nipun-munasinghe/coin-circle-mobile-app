<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background image (your circles+white background) -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/login_background" />

    <!-- Foreground login content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="90dp"
            android:paddingBottom="24dp">

            <!-- LOGIN Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:fontFamily="@font/poppins_bold"
                android:textSize="28sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:shadowColor="#4D000000"
                android:shadowDx="2"
                android:shadowDy="4"
                android:shadowRadius="3"
                android:layout_marginTop="152dp"
                android:layout_marginBottom="20dp" />

            <!-- Email input with icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="14dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_edittext_gray"
                android:elevation="5dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_email" />

                <EditText
                    android:id="@+id/emailEdit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/email"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="textEmailAddress" />
            </LinearLayout>

            <!-- Password input with icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="18dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_edittext_gray"
                android:elevation="5dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_lock" />

                <EditText
                    android:id="@+id/passwordEdit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/password"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="textPassword" />
            </LinearLayout>

            <!-- Login button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/logintext"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_rounded_teal"
                android:elevation="3dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="18dp"/>


            <!-- Or connect with text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/or_connect_with"
                android:textColor="#888888"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="46dp"
                android:layout_marginBottom="8dp" />

            <!-- Social Login Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="10dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/googleBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/googletxt"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/poppins_bold"
                    android:drawableLeft="@drawable/ic_google"
                    android:background="@drawable/bg_edittext_gray"
                    android:layout_marginEnd="8dp"
                    android:textSize="16sp"
                    android:paddingStart="5dp"/>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/facebookBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/facebooktxt"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/poppins_bold"
                    android:drawableLeft="@drawable/ic_facebook"
                    android:background="@drawable/bg_facebook_blue"
                    android:textSize="16sp"
                    android:paddingStart="5dp"/>

            </LinearLayout>

            <!-- Sign up suggestion -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/don_t_you_have_an_account"
                    android:textColor="#888888"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/signUpLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/signup"
                    android:textColor="@color/link"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingStart="4dp"/>
            </LinearLayout>

            <!-- Terms/Policy statement -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/by_continuing_you_agree_to_our"
                android:textColor="#888888"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginTop="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_agreement_and_privacy_policy"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
