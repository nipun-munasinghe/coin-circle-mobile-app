<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingTop="24dp"
    android:paddingBottom="16dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <!-- Back Arrow and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_back"
            android:layout_marginEnd="6dp"
            android:contentDescription="Back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_summary"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_bold"/>
    </LinearLayout>

    <!-- Group Balances Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/group_balances_i_owe"
        android:textStyle="bold"
        android:textSize="17sp"
        android:fontFamily="@font/poppins_bold"
        android:paddingTop="10dp"
        android:paddingBottom="6dp"
        android:textColor="@android:color/black"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/groupBalancesRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"/>

    <!-- Total Payable -->
    <TextView
        android:id="@+id/totalPayable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:gravity="end"
        android:paddingTop="8dp"
        android:paddingBottom="12dp"
        android:text="Total payable: 3,790.00 LKR"
        android:textAlignment="center"
        android:textColor="#20bcb0"
        android:textSize="16sp" />

    <!-- Latest Transactions Section Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Latest Transactions:"
        android:textStyle="bold"
        android:textSize="17sp"
        android:fontFamily="@font/poppins_bold"
        android:paddingTop="8dp"
        android:paddingBottom="6dp"
        android:textColor="@android:color/black"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/latestTransactionsRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:nestedScrollingEnabled="false"/>
</LinearLayout>
