<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp">

        <!-- Title Bar with Back Arrow -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="28dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="18dp"
                android:src="@drawable/ic_back"
                android:contentDescription="@string/back"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/card_details"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@android:color/black"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Subtitle: Added Cards -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/added_cards_1"
            android:textSize="15sp"
            android:textColor="#888"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="18dp"/>

        <!-- Card Image Centered -->
        <ImageView
            android:id="@+id/bankCard"
            android:layout_width="340dp"
            android:layout_height="200dp"
            android:src="@drawable/bank_card"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/card"/>

        <!-- Link Another Card Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="32dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:backgroundTint="#FFF"
            android:elevation="1dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_card"
                android:contentDescription="@string/add_card"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/link_another_card"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_chevron_right"
                android:contentDescription="@string/next"
                android:layout_marginEnd="16dp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
